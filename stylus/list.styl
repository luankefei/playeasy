#waterfall 
    margin: 0 auto
    margin-top: 50px
    min-height: 700px
    padding-bottom: 50px
    position: relative
    padding: 0 40px

// template
.template 
    box-shadow: 0 0 6px #ccc
    color: #202224
    display: inline-block
    margin-right: 15px
    position: absolute
    text-align: center
    width: 220px

.template *  
    font-size: 12px 

.template .preview  
    position: relative 

.template .preview i 
    background: url(../images/new.png) no-repeat
    height: 58px
    margin-left: 109px
    margin-top: -5px
    position: absolute
    width: 77px
    z-index: 1

.template .preview .preview-shadow 
    background-color: #000
    background-image: url(../images/preview-shadow.png)
    background-position: 60px 85px
    background-repeat: no-repeat
    cursor: pointer
    display: none
    height: 230px
    left: 10px
    opacity: 0.85
    position: absolute
    top: 10px
    width: 165px

.template .description  
    padding: 15px 
    padding-bottom: 10px 

.template .description .template-name  
    padding-bottom: 10px 
    font-weight: normal 

.template .description .comment-number  
    float: right
    color: #329c8e

.template .description .like-number  
    float: left 

.template .author
    border-bottom: 1px solid #e5e5e5
    border-top: 1px solid #e5e5e5
    margin-bottom: 12px

.template .author .left
    border-right: 1px solid #e5e5e5
    float: left
    height: 70px
    width: 70px

.template .author .author-head
    float: left
    height: 32px
    margin: 19px
    width: 32px

.template .author .author-name
    float: left
    margin-left: 25px
    margin-top: 19px

.template .image
    width: 100%

.template .image:hover
    cursor: pointer

.template .collect, .template .like
    background: #f1f1f1
    border-radius: 4px
    color: #329c8e
    display: none
    font-size: 12px
    height: 28px
    line-height: 28px
    position: absolute
    text-align: center
    top: 11px
    width: 56px

.template .collect:hover, .template .like:hover
    background: #329c8e
    color: #fff

.template .collect.selected, .template .like.selected
    background: #329c8e
    border: 1px solid #298277
    color: #fff
    height: 26px
    width: 54px

.template .collect
    left: 16px
    
.template .like
    right: 16px

.template .entry
    background-color: #ff6f76
    color: #FFFFFF
    cursor: pointer
    float: left
    height: 24px
    line-height: 24px
    margin: 0px 15px 12px
    width: 190px

.template .entry:hover
    background: rgb(0, 229, 168)
    cursor: pointer
    color: #fff

