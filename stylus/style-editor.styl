
@import 'base'

editorWidth = 600
editorHeight = 420

// 样式编辑组件的样式文件
#style-editor
    position: absolute
    top: 50%
    left: 50%
    margin-left: -(editorWidth / 2)px
    margin-top: -(editorHeight / 2)px
    
    width: (editorWidth)px
    height: (editorHeight)px
    background: #fff
    // background: sunkenLightRed
    border: 1px solid sunkenBorderColor
    
    .frame-head
        height: 34px
        line-height: 34px
        background: #f5f5f5
        text-align: center
        
        span
            font-size: 14px
            

        a
            float: right
            margin-right: 10px
    
    .frame-head:hover
        cursor: pointer
        background: #f9f9f9

    textarea
        width: (editorWidth - 60)px
        height: (editorHeight - 60)px
        padding: 30px
    