
// loggin 框宽度
logginWidth = 500
// 全局颜色
brightRed = #ff6f76

body
    background: brightRed
    width: 100%
    height: 100%
    overflow: hidden

// 登录区域
.slogan
    text-align: center
    color: #fff
    font-size: 40px
    padding-bottom: 80px

.loggin
    position: absolute
    width: (logginWidth)px
    height: 300px
    left: 0
    top: 0
    right: 0
    bottom: 0
    margin: auto
    
.loggin input
    width: (logginWidth * 0.6 - 10)px
    margin-left: (logginWidth * 0.2)px
    height: 40px
    border: 1px solid #f5f5f5
    margin-bottom: 30px
    font-size: 16px
    padding-left: 10px
    
.logo
    width: 100
