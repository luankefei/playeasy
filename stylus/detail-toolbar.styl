sunkenRed = #ed4441
sunkenLightRed = #ff6f76
sunkenBorderColor = #b5b5b5

.toolbar 
    background: #f5f5f5
    height: 50px

.toolbar button 
    background-color: transparent
    background-image: url("/public/image/toolbar.png")
    background-repeat: no-repeat
    color: #ed4441
    height: 42px
    line-height: 60px
    margin-top: 4px
    width: 38px

.toolbar button:hover 
    background-color: sunkenLightRed
    background-image: url("/public/image/toolbar-hover.png")
    color: #fff

.toolbar button.selected 
    background-color: #2a887c
    box-shadow: 0 0 3px #444 inset

.toolbar .tool-color 
    background: none repeat scroll 0 0 rgba(0, 0, 0, 0)
    border: medium none

.toolbar .tool-color button 
    background: none repeat scroll 0 0 rgba(0, 0, 0, 0)
    width: 101px

.toolbar .tool-color button .block-bac-value 
    border: 1px solid #bfbfbf
    float: left
    font-size: 12px
    height: 20px
    width: 70px

.toolbar .tool-color button .block-bac-current 
    background: none repeat scroll 0 0 #fff
    border: 1px solid #000
    float: left
    height: 16px
    margin-left: 5px
    margin-top: 2px
    width: 16px

.toolbar .toolbar-tip 
    float: left
    line-height: 18px
    width: 100%

.toolbar .toolbar-tip ul li 
    color: #fff
    float: left
    font-size: 12px
    margin-top: 0
    text-align: center
    width: 38px

.toolbar .toolbar-tip ul li:hover 
    cursor: default



#start-bar 
    left: 0
    padding-left: 10px
    position: fixed
    top: 34px
    width: 100%
    z-index: 1

#start-bar .toolbar-group:nth-child(1) 
    margin-right: 34px

#style-bar button 
    background-image: none


#style-bar button img 
    height: 24px
    width: 24px

#style-bar .toolbar-tip li 
    margin-right: 8px

