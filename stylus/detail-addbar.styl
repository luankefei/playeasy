
@import 'base'

#add-bar 
    background: #f5f5f5
    height: 100%
    position: fixed
    top: 84px
    width: 50px
    z-index: 10
    
    .toolbar-tip ul li 
        margin-right: 4px
        width: 40px

    li 
        background-image: url("/public/image/floatbar.png")
        background-position: -134px -41px
        background-repeat: no-repeat
        cursor: pointer
        height: 50px
        line-height: 75px
        margin-bottom: 18px
        text-align: center


    li.selected 
        background-color: sunkenRed
        background-image: url("/public/image/floatbar-hover.png")
        background-repeat: no-repeat
        color: #fff


    li:hover 
        background-color: sunkenLightRed
        background-image: url("/public/image/floatbar-hover.png")
        background-repeat: no-repeat
        color: #fff
        cursor: pointer
 
    li.left-add-chart 
        background-position: -133px -158px

    li.left-add-text 
        background-position: -132px -102px

    li.left-add-image 
        background-position: -234px 10px

    li.left-add-icon 
        background-position: -235px -43px

    li.left-add-style 
        background-position: -235px -212px

    li.left-add-upload 
        background-position: -134px -284px

    li.left-add-global 
        background-position: -235px -282px